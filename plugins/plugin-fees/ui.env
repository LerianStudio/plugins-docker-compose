# ================================
# Plugin Fees Frontend Configuration
# ================================

# Plugin UI Base Path
NEXT_PUBLIC_PLUGIN_UI_BASE_PATH=/plugin-fees-ui
PLUGIN_FEES_UI_PORT=8084
PLUGIN_FEES_UI_HOST=plugin-fees-ui
PLUGIN_FEES_UI_BASE_URL=http://localhost

# Plugin Fees Backend Service
PLUGIN_FEES_HOST=plugin-fees
PLUGIN_FEES_PORT=4002
PLUGIN_FEES_PATH=http://${PLUGIN_FEES_HOST}:${PLUGIN_FEES_PORT}

# Environment Configuration
NODE_ENV=production

# Authentication Configuration
PLUGIN_AUTH_ENABLED=false

# ================================
# Midaz Console Integration
# ================================

# Console-Layout config
NEXT_PUBLIC_MIDAZ_CONSOLE_BASE_URL=http://localhost
NEXT_PUBLIC_MIDAZ_AUTH_ENABLED=${PLUGIN_AUTH_ENABLED}

# ================================
# NextAuth Configuration
# ================================

# NextAuth URL (should match your frontend URL)
NEXT_PUBLIC_NEXTAUTH_URL=${NEXT_PUBLIC_MIDAZ_CONSOLE_BASE_URL}

# NextAuth Internal URL (for server-side requests)
NEXTAUTH_URL_INTERNAL=${NEXT_PUBLIC_MIDAZ_CONSOLE_BASE_URL}

# NextAuth Secret (generate a secure secret for production)
NEXTAUTH_SECRET=SECRET